            <div class="bg-white py-3 px-3 border-b-2 border-blue-400">
                <form method="GET" action="/chouf-nta" class="Conversation__left--search border-2 border-blue-400">
                    <input type="text" name="search" class="Conversation__left--search__input text-gray-900" aria-label="search" placeholder="enter your search" />

                    <button class="Conversation__left--search__submit" id="submit_search" aria-label="submit search" type="submit">
              <span
                class="iconify"
                data-icon="bx:bx-search-alt-2"
                data-inline="false"
              ></span>
            </button>
                </form>
            </div>
            <a href="/conversation.html" class="Conversation__left-item block hover:bg-gray-200 border-b bg-white">
                <div class="bg-blue-500 border-2 float-left h-12 m-1 mr-2 relative rounded-full text-white text-xl w-12">
                    <img class="rounded-full" alt="A" src="https://randomuser.me/api/portraits/women/75.jpg" />
                    <div class="bg-green-500 rounded-full w-3 h-3 absolute bottom-0 right-0"></div>
                </div>

                <div class="flex flex-col h-12 justify-center ml-2">
                    <p class="text-xl font-semibold leading-5">Cardiologie</p>
                    <h2 class="text-xs text-gray-600 truncate">
                        hadi matensach tbedelha .
                    </h2>
                </div>
            </a>
        </div>
        <div class="Conversation__right flex flex-col">
            <div class="bg-white py-2 border-b-2 border-blue-400">
                <div class="bg-white py-2 border-b-2 border-blue-400">
           
                </div>
             </div>
            <div
              class="flex-1 messages container mx-auto px-2 pb-2 overflow-y-visible"
            >
            </div>
            <div class="bg-white border-t-2 border-blue-400">
              <div class="mt-auto container mx-auto px-2 flex items-stretch">
                <input type="text" placeholder="..." class="block flex-1 px-2" id="message-sent" required/>

                <button id="envoie" class="ml-auto block py-1 px-1" type="submit">
                  <span
                    class="iconify text-3xl text-blue-600 hover:text-gray-700"
                    data-inline=" false"
                    data-icon="carbon:send-filled"
                  ></span>
                </button>
              </div>
            </div>
        </div>
      </main>
      <script src="/socket.io/socket.io.js"></script>
<script>
  const socket=io();
const outPut=function(msg,emails,imgs){
  const div=document.createElement("div");
 if(emails!=email){
  div.innerHTML=`
    <div class="flex w-full mt-4">
      <div
              class="h-12 w-12 rounded-full border border-blue-400 overflow-hidden"
            >
              <img
                src=${imgs}
                alt="pfe logo"
              />
            </div>
            <div class="message-content bg-white mx-2 w-5/6 rounded-lg p-2">
              ${msg}
            </div>
          </div>`
      document.querySelector(".messages").appendChild(div);
 }
  else{
    const div=document.createElement("div");
      div.innerHTML=`
    <div class='flex w-full mt-4 justify-end'>
      <div
              class="message-content bg-blue-400 text-white mx-2 w-5/6 rounded-lg p-2"
            >
              ${msg}
            </div>
            <div
              class="h-12 w-12 rounded-full border border-blue-400 overflow-hidden"
            >
              <img
                src=${imgs}
                alt="pfe logo"
              />
            </div>
          </div>`
            document.querySelector(".messages").appendChild(div);
  }
}
socket.on('message',(message,email,imgs)=>{
    outPut(message,email,imgs);
    //chatMessage.scrollTop=chatMessage.scrollHeight;
})
      let username= `<%= user.Firstname %>`
      let email=`<%= user.email %>`
      let lastname=`<%= user.Lastname %>`
      let role=`<%= user.role %>`
      let img="/profilPicture/<%= user.img %>";
  if(role=="admin"){
      lastname= lastname.concat("⭐")
      console.log(lastname)
                  }
      let room=location.pathname.split("")[14]
socket.emit("joined",{username,lastname,email,room,img});
socket.on("afficherMsg",(result)=>{
  result.forEach(element=>{
    if(element.email==email){
    //console.log("kifkif")
      const div=document.createElement("div");
      div.innerHTML=`
      <div class='flex w-full mt-4 justify-end'>
      <div
              class="message-content bg-blue-400 text-white mx-2 w-5/6 rounded-lg p-2"
            >
              ${element.message}
            </div>
            <div
              class="h-12 w-12 rounded-full border border-blue-400 overflow-hidden"
            >
              <img
                src=${element.pdp}
                alt="pfe logo"
              />
            </div>
          </div>`
            document.querySelector(".messages").appendChild(div);
    }
      if(element.email!=email){
        const div=document.createElement("div");
      div.innerHTML=`
      <div class="flex w-full mt-4">
      <div
              class="h-12 w-12 rounded-full border border-blue-400 overflow-hidden"
            >
              <img
                src=${element.pdp}
                alt="pfe logo"
              />
            </div>
            <div class="message-content bg-white mx-2 w-5/6 rounded-lg p-2">
              ${element.message}
            </div>
          </div>`
      document.querySelector(".messages").appendChild(div);
      }
      
    
  })
})
let button=document.getElementById("envoie");
button.addEventListener("click",function(e){
  e.preventDefault();
  let message=document.getElementById("message-sent").value;
  let ins=document.getElementById("message-sent");
  console.log(message)
  socket.emit('onMessage',message,username,email,lastname,role,room,img);
   //clear the input
    ins.value='';
   
})
</script>
